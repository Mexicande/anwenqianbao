<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    tools:context="cn.com.stableloan.ui.fragment.integral.IntegarlTaskFragment">
 <!--   <com.allen.library.SuperTextView
        android:layout_width="match_parent"
        stv:sLeftIconRes="@mipmap/task_1"
        stv:sLeftIconHeight="35dp"
        stv:sLeftIconWidth="48dp"
        android:layout_height="78dp">
    </com.allen.library.SuperTextView>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp">
        <ImageView
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="48dp"
            android:layout_height="35dp"
            android:src="@mipmap/task_1"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完善个人信息"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/blacktext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分+500"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/blacktext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息完善至100%"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.coorchice.library.SuperTextView
                android:layout_marginRight="@dimen/_10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                app:corner="25dp"
                android:gravity="center"
                android:text="+500"
                app:solid="@color/white"
                app:stroke_width="2dp"
                android:layout_height="35dp"
                app:stroke_color="@color/gay"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
