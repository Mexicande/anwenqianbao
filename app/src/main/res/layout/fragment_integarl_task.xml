<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cn.com.stableloan.ui.fragment.integral.IntegarlTaskFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="48dp"
                android:layout_height="35dp"
                android:src="@mipmap/task_1"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完善个人信息"/>
                <TextView
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"

                    android:textColor="@color/blacktext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分+500"/>
                <TextView
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/blacktext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息完善至100%"/>
            </LinearLayout>

            <RelativeLayout
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.coorchice.library.SuperTextView
                    android:id="@+id/integar"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="80dp"
                    app:corner="25dp"
                    android:gravity="center"
                    android:textColor="#ffae2d"
                    app:solid="@color/white"
                    app:stroke_width="1.5dp"
                    android:layout_height="35dp"
                    app:stroke_color="@color/diver"
                    />
                <ImageView
                    android:id="@+id/user_information"
                    android:layout_marginRight="@dimen/_20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@id/integar"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:src="@mipmap/editor"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_marginLeft="15dp"
            android:background="#F3F2F8"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/task_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
</LinearLayout>
