<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ic_default_top"
        android:layout_marginTop="@dimen/_1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_defalut_class"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/line"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_width="4dp"
            android:background="@color/colorStatus"
            android:layout_height="20dp"/>
        <TextView
            android:layout_toRightOf="@id/line"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/project_name"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类专题"
            android:textStyle="bold"
            android:textColor="@color/select_text_color"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/body_project"
        android:textSize="14sp"
        android:textColor="@color/text_setting"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v4.widget.Space
        android:layout_below="@id/body_project"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20dp" />
</LinearLayout>