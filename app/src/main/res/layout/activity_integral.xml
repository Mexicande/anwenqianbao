<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="cn.com.stableloan.ui.activity.IntegralActivity">
    <include layout="@layout/toolbar_layout"/>
  <RelativeLayout
      android:layout_marginTop="@dimen/_1dp"
      android:layout_width="match_parent"
      android:background="@drawable/integral_background"
      android:layout_height="130dp">
      <TextView
          android:id="@+id/tv_inte"
          android:layout_marginTop="23dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="当前积分"
          android:textSize="15sp"
          android:layout_centerHorizontal="true"
          android:textColor="@color/white"/>
      <LinearLayout
          android:id="@+id/layout"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/tv_inte"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/tv_Integral"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="500"
              android:textColor="@color/white"
              android:textSize="20sp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="分"
              android:textSize="15sp"
              android:textColor="@color/white"/>
      </LinearLayout>
      <Button
          android:layout_below="@id/layout"
          android:layout_width="wrap_content"
          android:paddingLeft="10dp"
          android:paddingRight="@dimen/_10dp"
          android:text="提前积攒好积分,准备兑换现金哦!"
          android:layout_centerHorizontal="true"
          android:textColor="#5F5E5D"
          android:textSize="10dp"
          style="?android:attr/borderlessButtonStyle"
          android:background="@drawable/prompt_background"
          android:layout_height="20dp" />
  </RelativeLayout>
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#F3F2F8"
        android:layout_gravity="center_horizontal" />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
