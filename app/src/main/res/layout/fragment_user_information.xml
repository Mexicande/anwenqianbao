<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/base_white"
    tools:context="cn.com.stableloan.ui.fragment.UserInformationFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/et_name"
                        android:maxLines="1"
                        whatever:testType="regexp"
                        android:imeOptions="actionNext"
                        whatever:customRegexp="^([a-zA-Z\\u4e00-\\u9fa5\\·]{1,10})$"
                        whatever:emptyAllowed="true"
                        whatever:testErrorString="姓名格式不正确"
                        android:inputType="textPersonName"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/_5dp"
                        android:layout_width="220dp"
                        android:textSize="@dimen/textsize"
                        android:maxLength="10"
                        android:tint="@color/gay"
                        android:textColor="@color/gay"
                        android:layout_height="@dimen/layout_height"
                        android:background="@drawable/editext_normal"
                        />
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/et_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="真实名字 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="220dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:tint="@color/gay"
                        android:textColor="@color/gay"
                        android:textSize="@dimen/textsize"/>
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="绑定手机号 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/et_IDCard"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        whatever:testType="regexp"
                        whatever:emptyAllowed="true"
                        whatever:customRegexp="^[1-9]\\d{5}[1-9]\\d{3}((0\\d)|(1[0-2]))(([0|1|2]\\d)|3[0-1])\\d{3}([0-9]|X)$"
                        whatever:testErrorString="身份证格式不正确"
                        android:tint="@color/gay"
                        android:textColor="@color/gay"
                        android:layout_width="220dp"
                        android:layout_height="@dimen/layout_height"
                        android:textSize="@dimen/textsize"
                        android:maxLength="18"
                        android:paddingLeft="@dimen/_5dp"
                        android:background="@drawable/editext_normal"
                        />
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/et_IDCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/et_Sex"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        whatever:testType="regexp"
                        android:maxLines="1"
                        whatever:customRegexp="[\u4e00-\u9fa5]"
                        whatever:testErrorString="格式不正确"
                        android:tint="@color/gay"
                        android:textColor="@color/gay"
                        android:textSize="@dimen/textsize"
                        android:paddingLeft="@dimen/_5dp"
                        android:layout_width="220dp"
                        android:layout_height="@dimen/layout_height"
                        android:background="@drawable/editext_normal"
                        />
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/et_Sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别 : "
                        android:textSize="@dimen/textsize"
                        android:id="@+id/textView2" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/et_Age1"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/textsize"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="3"
                        android:paddingLeft="@dimen/_5dp"
                        android:layout_width="220dp"
                        android:tint="@color/gay"
                        android:textColor="@color/gay"
                        android:layout_height="@dimen/layout_height"
                        android:background="@drawable/editext_normal"
                        />
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/et_Age1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/et_Address"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:imeOptions="actionNext"
                        android:layout_width="220dp"
                        android:maxLines="1"
                        android:textSize="@dimen/textsize"
                        android:paddingLeft="@dimen/_5dp"
                        android:tint="@color/gay"
                        android:textColor="@color/gay"
                        android:layout_height="@dimen/layout_height"
                        android:background="@drawable/editext_normal"
                        />
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/et_Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证地址 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <cn.com.stableloan.view.BetterSpinner
                        android:id="@+id/et_Marriage"
                        android:layout_width="220dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/textsize"
                        android:paddingLeft="@dimen/_5dp"

                        android:textColor="@color/gay"
                        android:layout_height="@dimen/layout_height"
                        android:background="@drawable/editext_normal"
                        />
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:text="婚姻状况 : "
                        android:layout_toLeftOf="@id/et_Marriage"
                        android:textSize="@dimen/textsize" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layout"
                        android:layout_width="220dp"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="35dp">

                        <TextView
                            android:id="@+id/et_City"
                            style="@android:style/Widget.EditText"
                            android:textColor="@color/gay"
                            android:layout_width="130dp"
                            android:paddingLeft="@dimen/_5dp"
                            android:layout_height="@dimen/layout_height"
                            android:textSize="@dimen/textsize"
                            android:layout_centerVertical="true"
                            android:background="@drawable/editext_normal"
                            />


                        <cn.com.stableloan.view.RoundButton
                            android:id="@+id/getCity"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:text="自动获取"
                            app:btnCornerRadius="5dp"
                            app:btnPressedRatio="0.8"
                            app:btnSolidColor="@color/white"
                            android:textColor="@color/gay"
                            app:btnStrokeColor="@color/gay"
                            app:btnStrokeWidth="1dp"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现居住城市 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layout4"
                        android:layout_width="220dp"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="35dp">
                        <com.andreabaccega.widget.FormEditText
                            android:id="@+id/et_Contact_name"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_5dp"
                            android:layout_width="130dp"
                            android:textSize="@dimen/textsize"
                            android:layout_height="@dimen/layout_height"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:tint="@color/gay"
                            android:maxLength="10"
                            android:textColor="@color/gay"
                            android:background="@drawable/editext_normal"
                            />

                        <cn.com.stableloan.view.RoundButton
                            android:id="@+id/getContact1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:text="读取通讯录"
                            app:btnCornerRadius="5dp"
                            app:btnPressedRatio="0.8"
                            app:btnSolidColor="@color/white"
                            android:textColor="@color/gay"
                            app:btnStrokeColor="@color/gay"
                            app:btnStrokeWidth="1dp"
                            />


                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/layout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人姓名 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="220dp"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="35dp">
                        <com.andreabaccega.widget.FormEditText
                            android:id="@+id/et_Contact1"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_5dp"
                            whatever:testType="regexp"
                            whatever:customRegexp="^[1]\\d{10}$"
                            whatever:testErrorString="号码格式不正确"
                            whatever:emptyAllowed="true"
                            android:layout_width="220dp"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:maxLength="11"
                            android:tint="@color/gay"
                            android:textColor="@color/gay"
                            android:textSize="@dimen/textsize"
                            android:layout_height="@dimen/layout_height"
                            android:background="@drawable/editext_normal"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人电话 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cn.com.stableloan.view.BetterSpinner
                        android:id="@+id/et_Between1"
                        android:layout_width="220dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/textsize"
                        android:paddingLeft="5dp"
                        android:textColor="@color/gay"
                        android:layout_height="@dimen/layout_height"

                        android:background="@drawable/editext_normal"
                        />
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/et_Between1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="与您的关系 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layout5"
                        android:layout_width="220dp"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="35dp">
                        <com.andreabaccega.widget.FormEditText
                            android:id="@+id/et_Contact_name2"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_5dp"
                            android:layout_width="130dp"
                            android:textSize="@dimen/textsize"
                            android:layout_height="@dimen/layout_height"
                            android:background="@drawable/editext_normal"
                            whatever:testType="regexp"
                            android:tint="@color/gay"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textColor="@color/gay"
                            whatever:customRegexp="[\u4e00-\u9fa5]"
                            whatever:testErrorString="格式不正确"
                            />
                        <!--<Button
                            android:id="@+id/getContact2"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textColor="@color/gay"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@drawable/buttin_radio"
                            android:text="读取通讯录"
                            />-->
                        <cn.com.stableloan.view.RoundButton
                            android:id="@+id/getContact2"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:text="读取通讯录"
                            app:btnCornerRadius="5dp"
                            app:btnPressedRatio="0.8"
                            app:btnSolidColor="@color/white"
                            android:textColor="@color/gay"
                            app:btnStrokeColor="@color/gay"
                            app:btnStrokeWidth="1dp"
                            />


                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/layout5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人姓名 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_width="220dp"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="35dp">
                        <com.andreabaccega.widget.FormEditText
                            android:id="@+id/et_Contact"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_5dp"
                            android:tint="@color/gay"
                            android:textColor="@color/gay"
                            android:textSize="@dimen/textsize"
                            android:layout_width="220dp"
                            android:inputType="number"
                            android:maxLength="11"
                            android:maxLines="1"
                            whatever:testType="regexp"
                            whatever:customRegexp="^[1]\\d{10}$"
                            whatever:testErrorString="号码格式不正确"
                            whatever:emptyAllowed="true"
                            android:layout_height="@dimen/layout_height"
                            android:background="@drawable/editext_normal"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人电话 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cn.com.stableloan.view.BetterSpinner
                        android:id="@+id/et_Between2"
                        android:layout_width="220dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/textsize"
                        android:paddingLeft="@dimen/_5dp"
                        android:tint="@color/gay"
                        android:textColor="@color/gay"
                        android:layout_height="@dimen/layout_height"
                        android:background="@drawable/editext_normal"
                        />
                    <TextView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/et_Between2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="与您的关系 : "
                        android:textSize="@dimen/textsize"/>
                </RelativeLayout>
                <cn.com.stableloan.view.RoundButton
                    android:id="@+id/save"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:text="保 存"
                    app:btnCornerRadius="10dp"
                    app:btnPressedRatio="0.9"
                    app:btnSolidColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ccffffff"
                    />

            </LinearLayout>
        </ScrollView>
</LinearLayout>
