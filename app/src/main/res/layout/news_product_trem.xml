<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="95dip"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="0.1dp"
    card_view:cardUseCompatPadding="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ic_product_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ic_product_logo"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layou5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_Pname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/product_name_color"
                    android:textSize="14sp"
                    android:layout_marginLeft="3dp"
                    android:text="安稳钱包"
                    />
                <ImageView
                    android:id="@+id/iv_news"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@id/tv_Pname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_new"/>
                <ImageView
                    android:id="@+id/iv_hots"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@id/iv_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_hot"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:id="@+id/layout_label"
                android:layout_below="@id/layou5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <com.coorchice.library.SuperTextView
                        android:id="@+id/label1"
                        android:visibility="gone"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="10sp"
                        app:corner="2dp"
                        app:stroke_width="1dp"
                        />
                    <com.coorchice.library.SuperTextView
                        android:id="@+id/label2"
                        android:paddingLeft="5dp"
                        android:visibility="gone"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        app:corner="2dp"
                        app:stroke_width="1dp"
                        />
                    <com.coorchice.library.SuperTextView
                        android:id="@+id/label3"
                        android:paddingLeft="5dp"
                        android:visibility="gone"

                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        app:corner="2dp"
                        app:stroke_width="1dp"
                        />
                    <com.coorchice.library.SuperTextView
                        android:id="@+id/label4"
                        android:paddingLeft="5dp"
                        android:visibility="gone"

                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        app:corner="2dp"
                        app:stroke_width="1dp"
                        />
                    <TextView
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/shengluehao"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="..."/>
                </LinearLayout>
            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/product_list_desc"
                android:layout_below="@id/layout_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1步授信淘宝,3分钟获得额度快捷快递还客户空间哈市就肯定会"
                android:maxEms="18"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="@color/text_setting"/>
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_gravity="bottom"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:layout_height="@dimen/_1dp"/>
</android.support.v7.widget.CardView>