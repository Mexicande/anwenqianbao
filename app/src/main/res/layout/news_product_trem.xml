<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="90dip"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="0.1dp"
    card_view:cardUseCompatPadding="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ic_product_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="60dp"
            android:src="@mipmap/logo"
            android:layout_height="60dp" />
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ic_product_logo"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layou5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/product_list_name"
                    android:textColor="@color/product_name_color"
                    android:textSize="14sp"
                    android:src="@mipmap/new_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/product_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/product_name_color"
                    android:textSize="14sp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/product_list_name"
                    android:text="贷款王闪亮登场"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/rignt_arr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:id="@+id/layout_label"
                android:layout_below="@id/layou5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.coorchice.library.SuperTextView
                    android:id="@+id/label1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="身份证"
                    android:textColor="#FFCA28"
                    android:textSize="10sp"
                    app:corner="10dp"
                    app:solid="#FFF8E1"
                    app:stroke_color="#FFECB3"
                    app:stroke_width="1dp"
                    />
                <com.coorchice.library.SuperTextView
                    android:id="@+id/label2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="分期还款"
                    android:textColor="#EC407A"
                    android:textSize="10sp"
                    app:corner="10dp"
                    app:solid="#F8BBD0"
                    app:stroke_color="#F48FB1"
                    app:stroke_width="1dp"
                    />
                <com.coorchice.library.SuperTextView
                    android:id="@+id/label3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="高通过率"
                    android:textColor="#1DE9B6"
                    android:textSize="10sp"
                    app:corner="10dp"
                    app:solid="#B9F6CA"
                    app:stroke_color="#69F0AE"
                    app:stroke_width="1dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/product_list_desc"
                android:layout_below="@id/layout_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1步授信淘宝,3分钟获得额度快捷快递还客户空间哈市就肯定会"
                android:maxEms="18"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="@color/product_desc_color"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>