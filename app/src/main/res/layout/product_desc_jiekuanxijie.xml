<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardBackgroundColor="@color/white"
   >
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="3dp"
            android:textSize="15sp"
            android:text=" 借款审核细节"
            android:textColor="@color/desc_text_color"
            android:drawableLeft="@drawable/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/crowd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:visibility="gone"

            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:visibility="gone"

            android:id="@+id/actual_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:visibility="gone"

            android:id="@+id/repayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:visibility="gone"

            android:id="@+id/repayment_channels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:visibility="gone"

            android:id="@+id/interest_algorithm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:visibility="gone"

            android:id="@+id/prepayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/product_desc"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>
</RelativeLayout>