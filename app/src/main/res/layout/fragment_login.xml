<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/view_passWord"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.com.stableloan.utils.editext.PowerfulEditText
        android:id="@+id/et_phone"
        android:layout_marginLeft="@dimen/_30dp"
        android:layout_marginRight="@dimen/_30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="手机号"
        android:maxLines="1"
        android:maxLength="11"
        android:drawableLeft="@mipmap/iv_phone"
        app:leftDrawableWidth="13dp"
        app:leftDrawableHeight="18dp"
        android:inputType="phone"
        android:drawablePadding="@dimen/_10dp"
        android:paddingLeft="11dp"
        android:paddingRight="15dp"
        android:textSize="@dimen/_16sp"
        android:textColorHint="@color/gay"
        android:theme="@style/MyEditText"
        android:textCursorDrawable="@null"
        app:funcType="canClear"
        />
    <cn.com.stableloan.utils.editext.PowerfulEditText
        android:id="@+id/et_passWord"
        android:theme="@style/MyEditText"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="17dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_30dp"
        android:layout_marginRight="@dimen/_30dp"
        android:hint="6-20位密码"
        android:maxLines="20"
        android:minLines="1"
        android:textSize="@dimen/_16sp"
        android:drawableLeft="@mipmap/iv_password"
        android:drawablePadding="@dimen/_10dp"
        app:leftDrawableWidth="15dp"
        app:leftDrawableHeight="18dp"
        android:textColorHint="@color/gay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textCursorDrawable="@null"
        app:funcType="canWatchPwd"
        android:inputType="textPassword"
        />
    <com.example.gt3unbindsdk.GT3GeetestButton
        android:id="@+id/ll_btn_type"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"/>

    <cn.com.stableloan.view.RoundButton
        android:id="@+id/bt_login"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="登 录"
        app:btnCornerRadius="5dp"
        app:btnPressedRatio="0.9"
        app:btnSolidColor="@color/colorPrimary"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#ffffff"
        />
    <cn.com.stableloan.view.RoundButton
        android:id="@+id/bt_VisiableButton"
        android:enabled="false"
        android:layout_below="@id/et_SettingPassWord"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="开始"
        app:btnCornerRadius="5dp"
        app:btnPressedRatio="0.9"
        app:btnSolidColor="@color/Normal_Button"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#ffffff"
        />


    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_1dp"
            android:layout_height="12dp"
            android:background="@color/gay"/>
        <TextView
            android:id="@+id/tv_messagelogin"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免注册登录"
            android:textColor="@color/gay"
            android:textSize="@dimen/_16sp"
            android:padding="@dimen/_5dp"
            android:layout_toLeftOf="@id/view"/>
        <TextView
            android:id="@+id/tv_forgetPassWord"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:padding="@dimen/_5dp"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/gay"
            android:layout_toRightOf="@id/view"/>

    </RelativeLayout>

</LinearLayout>
