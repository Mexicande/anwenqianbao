<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.stableloan.ui.activity.LoginActivity">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:elevation="2dp"
        android:layout_height="90dp"
        android:src="@mipmap/logo"/>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_below="@id/iv_logo"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_backgroun">
        <android.support.design.widget.TabLayout
            android:id="@+id/nts"
            app:tabMode="fixed"
            android:layout_marginEnd="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabTextColor="@color/gay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <View

            android:id="@+id/view"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/nts"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gay"
            />
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_below="@id/view"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_edtext"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginLeft="6dp"
            android:id="@+id/iv_phone"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_phone"/>
        <View
            android:layout_marginTop="10dp"

            android:id="@+id/view1"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_phone"
            android:background="@color/gay"
            android:layout_width="1dp"
            android:layout_height="40dp"/>
        <EditText

            android:inputType="phone"
            android:id="@+id/et_phone"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="15sp"
            android:maxLength="11"
            android:textColorHint="@color/gay"
            android:layout_toRightOf="@id/view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="手机号"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_below="@id/layout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_edtext"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginLeft="6dp"
            android:id="@+id/iv_lock"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_lock"/>
        <View
            android:layout_marginTop="10dp"
            android:id="@+id/view2"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_lock"
            android:background="@color/gay"
            android:layout_width="1dp"
            android:layout_height="40dp"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_lock"
            android:maxLength="11"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textColorHint="@color/gay"
            android:layout_toRightOf="@id/view2"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textColorHighlight="#666666"
            android:layout_height="match_parent"
            android:hint="密码"/>

        <Button
            android:visibility="gone"
            android:id="@+id/bt_getCode"
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/fastloginbutton"
            android:textColor="#ffffff"
            android:text="获取验证码"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/tv_forget"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="忘记密码"/>
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/layout2"
            android:layout_marginTop="40dp"
            android:text="立即进入"
            android:background="@drawable/login_button_start"
            style="?android:attr/borderlessButtonStyle"
            android:enabled="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/login_button_down"
            android:layout_below="@id/login_button"
            android:layout_marginTop="20dp"
            android:text="点击注册"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_bottom"/>
</RelativeLayout>
