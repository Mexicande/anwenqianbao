<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="110dip"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/top"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:src="@mipmap/jian"
            />
        <ImageView
            android:id="@+id/ic_product_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:src="@mipmap/ic_dafual_logo"
            android:layout_height="50dp" />
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ic_product_logo"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/product_list_name"
                android:textColor="@color/product_name_color"
                android:textSize="18sp"
                android:text="现金贷"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/product_list_desc"
                android:layout_below="@id/product_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1步授信淘宝,3分钟获得额度"
                android:maxEms="13"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@color/product_desc_color"/>

            <LinearLayout
                android:layout_below="@id/product_list_desc"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/product_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="额度"
                    />
                <TextView
                    android:textColor="#ff4b16"
                    android:id="@+id/tv_Limit"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000~8000"
                    />
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月利息低至"
                    />

                <TextView
                    android:textColor="#ff4b16"
                    android:id="@+id/rate"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.5%"
                    />


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>