<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/top"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_recommend"
                />
            <ImageView
                android:id="@+id/ic_product_logo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:src="@mipmap/ic_dafual_logo"
                android:layout_height="50dp" />
            <RelativeLayout
                android:id="@+id/layou1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ic_product_logo"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/product_list_name"
                    android:textColor="@color/product_name_color"
                    android:textSize="18sp"
                    android:text="现金贷"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/layout_label"
                    android:layout_below="@id/product_list_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.coorchice.library.SuperTextView
                        android:id="@+id/label1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="10sp"
                        app:corner="2dp"
                        android:text="123"
                        android:visibility="gone"
                        app:stroke_width="1dp"
                        />
                    <com.coorchice.library.SuperTextView
                        android:visibility="gone"
                        android:id="@+id/label2"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        app:corner="2dp"
                        app:stroke_width="1dp"
                        />
                    <com.coorchice.library.SuperTextView
                        android:visibility="gone"

                        android:id="@+id/label3"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        app:corner="2dp"
                        app:stroke_width="1dp"
                        />
                    <com.coorchice.library.SuperTextView
                        android:visibility="gone"
                        android:id="@+id/label4"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        app:corner="2dp"
                        app:stroke_width="1dp"
                        />

                    <TextView
                        android:layout_gravity="bottom"
                        android:visibility="gone"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/shengluehao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="..."/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_below="@id/layout_label"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/layout_rote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/interest_algorithm"
                            android:textSize="14sp"
                            android:textColor="@color/product_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="月"
                            />
                        <TextView
                            android:id="@+id/month"
                            android:layout_toRightOf="@id/interest_algorithm"
                            android:textSize="14sp"
                            android:textColor="@color/product_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="利率低至"
                            />
                        <TextView
                            android:layout_toRightOf="@id/month"
                            android:id="@+id/tv_Limit"
                            android:textColor="@color/product_limit"
                            android:layout_marginLeft="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.0%"
                            android:textSize="15sp"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_toRightOf="@id/layout_rote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/time"
                            android:layout_marginLeft="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="放款速度:"
                            android:textColor="@color/product_limit"
                            />
                        <TextView
                            android:layout_marginRight="5dp"
                            android:textColor="@color/product_limit"
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/semicircle_right"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:background="@drawable/circular"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/semicircle"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/product_introduction"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/product_desc"
            android:lines="1"
            android:ellipsize="end"
            android:text="产品介绍产品介绍产品介绍产品介绍"/>
    </LinearLayout>

</android.support.v7.widget.CardView>