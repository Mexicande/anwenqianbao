<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="140dip"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jian"
            />
        <ImageView
            android:id="@+id/ic_product_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:src="@mipmap/ic_dafual_logo"
            android:layout_height="50dp" />
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ic_product_logo"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/product_list_name"
                android:textColor="@color/product_name_color"
                android:textSize="18sp"
                android:text="现金贷"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/product_list_desc"
                android:layout_below="@id/product_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1步授信淘宝,3分钟获得额度"
                android:textSize="16sp"
                android:textColor="@color/product_desc_color"/>
            <TextView
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:layout_below="@id/product_list_desc"
                android:textColor="@color/product_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="额度1000~8000月利息低至0.1%"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>