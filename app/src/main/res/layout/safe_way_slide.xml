<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_safe_setting"
    >
    <RelativeLayout
        android:id="@+id/slide_Safe_Way"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/view_way"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_HeaderLock"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="手势解锁"
                android:textColor="@color/blacktext"
                android:textSize="@dimen/_16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="#EEEEEE"
                />
            <TextView
                android:id="@+id/tv_WordLock"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="密码解锁"
                android:textColor="@color/blacktext"
                android:textSize="@dimen/_16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="#EEEEEE"
                />
            <TextView
                android:id="@+id/bt_CancelWay"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blacktext"
                android:gravity="center_horizontal"
                android:text="取消"
                android:textSize="@dimen/_16sp"/>
        </LinearLayout>
        <View
            android:id="@+id/way_Visiable"
            android:layout_above="@id/view_way"
            android:background="#50000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </View>
    </RelativeLayout>
</RelativeLayout>