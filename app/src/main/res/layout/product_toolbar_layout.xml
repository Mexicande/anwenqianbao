<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/toolbar"
    android:background="@color/colorPrimary"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/title_name"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />


    <com.coorchice.library.SuperTextView
        android:layout_marginTop="20dp"
        android:id="@+id/cardBank"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingLeft="13dp"
        android:text="信用卡"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:corner="40dp"
        app:isShowState="true"
        app:state_drawable="@mipmap/ic_bank"
        app:state_drawable_height="18dp"
        app:state_drawable_mode="left"
        app:state_drawable_padding_left="5dp"
        app:state_drawable_width="18dp"
        />

    <com.coorchice.library.SuperTextView
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:id="@+id/layout_select"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:paddingLeft="23dp"
        android:text="筛选"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:corner="40dp"
        app:isShowState="true"
        app:state_drawable="@mipmap/select"
        app:state_drawable_height="18dp"
        app:state_drawable_mode="left"
        app:state_drawable_padding_left="10dp"
        app:state_drawable_width="18dp"
        />

</android.support.v7.widget.Toolbar>