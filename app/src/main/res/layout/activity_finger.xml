<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.com.stableloan.ui.activity.safe.FingerActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp">
        <TextView
            android:id="@+id/title_name"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/select_text_color"
            android:textSize="20sp"
            android:text="安全验证"
            />
      <!--  <LinearLayout
            android:id="@+id/layout_go"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:paddingRight="@dimen/_20dp"
                android:paddingTop="@dimen/_5dp"
                android:paddingBottom="@dimen/_5dp"
                android:src="@mipmap/iv_black_back"/>
        </LinearLayout>-->
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@color/text_setting"
        android:layout_gravity="center_horizontal"
        android:text="您正在通过安全验证"/>
    <ImageView
        android:layout_marginTop="@dimen/_20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/iv_userheader"/>
    <TextView
        android:layout_marginTop="@dimen/_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/text_setting"
        android:layout_gravity="center_horizontal"
        android:text="请验证指纹"/>
    <TextView
        android:id="@+id/tv_fail"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:id="@+id/iv_finger"
        android:padding="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:src="@mipmap/iv_finger"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gay"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:text="可在安全设置中取消或变更验证设定"/>
    </RelativeLayout>
</LinearLayout>
