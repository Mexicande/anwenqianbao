<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cn.com.stableloan.ui.fragment.information.User_Bank_Fragment">

   <LinearLayout
       android:background="@color/base_white"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_50dp">
           <View
               android:layout_marginLeft="@dimen/_10dp"
               android:layout_width="4dp"
               android:layout_gravity="center_vertical"
               android:layout_centerVertical="true"
               android:background="@color/colorStatus"
               android:layout_height="17dp"/>
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/debit_camera"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               stv:sLeftTextSize="16sp"
               stv:sLeftViewMarginLeft="5dp"
               stv:sDividerLineColor="@color/frame_color"
               stv:sLeftTextString="@string/DebitBank_Card"
               stv:sLeftTextIsBold="true"
               stv:sRightTextColor="@color/select_text_color"
               stv:sRightTextSize="@dimen/information_textSize"
               stv:sRightTvDrawableRight="@mipmap/iv_scan"
               stv:sBottomDividerLineMarginRight="10dp"
               stv:sDividerLineType="none"
               stv:sRightTextString="一键填写"
               />
       </LinearLayout>
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/et_BankCard1"
           style="@style/identity_style"
           stv:sLeftTextString="@string/Debit_Id"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sRightTextSize="@dimen/information_textSize"
           stv:sDividerLineType="both"
           stv:sTopDividerLineMarginLeft="10dp"
           stv:sTopDividerLineMarginRight="10dp"
           />
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/et_BankPersonName1"
           style="@style/identity_style"

           stv:sLeftTextString="@string/Debit_UserName"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sRightTextSize="@dimen/information_textSize"
           stv:sMaxEms="13"

           />
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/et_BankPhone1"
           style="@style/identity_style"

           stv:sLeftTextString="@string/Debit_Phone"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sRightTextSize="@dimen/information_textSize"

           />
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/et_SelectBank1"
           style="@style/identity_style"

           stv:sLeftTextString="@string/Debit_BankName"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sRightTextSize="@dimen/information_textSize"
           stv:sRightTextString="@string/AutoEdit"

           />
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/et_ValidityTime1"
           style="@style/identity_style"

           stv:sLeftTextString="@string/Validity_Time"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sRightTextSize="@dimen/information_textSize"

           />


       <LinearLayout
           android:layout_marginTop="@dimen/_10dp"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_50dp">
           <View
               android:layout_marginLeft="@dimen/_10dp"
               android:layout_width="4dp"
               android:layout_gravity="center_vertical"
               android:layout_centerVertical="true"
               android:background="@color/colorStatus"
               android:layout_height="17dp"/>
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/credit_camera"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               stv:sLeftTextSize="16sp"
               stv:sLeftViewMarginLeft="5dp"
               stv:sDividerLineColor="@color/frame_color"
               stv:sLeftTextString="@string/CreditBank_Card"
               stv:sLeftTextIsBold="true"
               stv:sRightTextColor="@color/select_text_color"
               stv:sRightTextSize="@dimen/information_textSize"
               stv:sRightTvDrawableRight="@mipmap/iv_scan"
               stv:sBottomDividerLineMarginRight="10dp"
               stv:sDividerLineType="none"
               stv:sRightTextString="一键填写"
               />
       </LinearLayout>
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/is_credit"
           style="@style/identity_style"
           stv:sDividerLineType="both"
           stv:sTopDividerLineMarginLeft="10dp"
           stv:sTopDividerLineMarginRight="10dp"
           stv:sLeftTextString="@string/Or_CreditBank"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sRightTextSize="@dimen/information_textSize"
           stv:sRightTextString="@string/No_Have"
           />
       <LinearLayout
           android:id="@+id/layout_credit"
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:visibility="gone"
           android:layout_height="wrap_content">
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/et_BankCard2"
               style="@style/identity_style"
               stv:sLeftTextString="@string/Credit_Id"
               stv:sRightIconRes="@mipmap/ic_arrow"
               stv:sRightTextColor="@color/text_setting"
               stv:sRightTextSize="@dimen/information_textSize"
               />
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/et_BankPersonName2"
               style="@style/identity_style"

               stv:sLeftTextString="@string/Credit_UserName"
               stv:sMaxEms="13"
               stv:sRightIconRes="@mipmap/ic_arrow"
               stv:sRightTextColor="@color/text_setting"
               stv:sRightTextSize="@dimen/information_textSize"

               />
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/et_BankPhone2"
               style="@style/identity_style"

               stv:sLeftTextString="@string/Credit_Phone"
               stv:sRightIconRes="@mipmap/ic_arrow"
               stv:sRightTextColor="@color/text_setting"
               stv:sRightTextSize="@dimen/information_textSize"

               />
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/et_SelectBank2"
               style="@style/identity_style"

               stv:sLeftTextString="@string/Credit_BankName"
               stv:sRightIconRes="@mipmap/ic_arrow"
               stv:sRightTextColor="@color/text_setting"
               stv:sRightTextSize="@dimen/information_textSize"
               stv:sRightTextString="@string/AutoEdit"

               />
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/et_ValidityTime2"
               style="@style/identity_style"

               stv:sLeftTextString="@string/Validity_Time"
               stv:sRightIconRes="@mipmap/ic_arrow"
               stv:sRightTextColor="@color/text_setting"
               stv:sRightTextSize="@dimen/information_textSize"

               />
       </LinearLayout>
       <cn.com.stableloan.view.RoundButton
           android:id="@+id/save"
           android:layout_marginBottom="50dp"
           android:layout_marginTop="40dp"
           android:layout_gravity="center"
           android:layout_marginLeft="@dimen/_20dp"
           android:layout_marginRight="@dimen/_20dp"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:text="@string/Save"
           app:btnCornerRadius="5dp"
           app:btnPressedRatio="0.9"
           app:btnSolidColor="@color/colorPrimary"
           android:gravity="center"
           android:textSize="18sp"
           android:textColor="@color/white"
           />
   </LinearLayout>
</ScrollView>
