<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cn.com.stableloan.ui.fragment.information.User_Bank_Fragment">

   <LinearLayout
       android:background="@color/base_white"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:paddingLeft="@dimen/_10dp"
           android:gravity="center_vertical"
           android:layout_width="match_parent"
           android:textStyle="bold"
           android:background="@color/white"
           android:layout_height="50dp"
           android:textSize="17sp"
           android:textColor="@color/select_text_color"
           android:text="借记卡信息"/>
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/et_BankCard1"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           stv:sLeftTextSize="@dimen/information_textSize"
           stv:sLeftTextString="借记卡卡号"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sLeftTextColor="@color/select_text_color"
           stv:sRightTextSize="@dimen/information_textSize"
           stv:sBottomDividerLineMarginLeft="10dp"
           stv:sBottomDividerLineMarginRight="10dp"

           />
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/et_BankPersonName1"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           stv:sLeftTextSize="@dimen/information_textSize"
           stv:sLeftTextString="持卡人姓名"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sLeftTextColor="@color/select_text_color"
           stv:sRightTextSize="@dimen/information_textSize"
           stv:sMaxEms="13"

           stv:sBottomDividerLineMarginLeft="10dp"
           stv:sBottomDividerLineMarginRight="10dp"

           />
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/et_BankPhone1"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           stv:sLeftTextSize="@dimen/information_textSize"
           stv:sLeftTextString="银行绑定手机号"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sLeftTextColor="@color/select_text_color"
           stv:sRightTextSize="@dimen/information_textSize"
           stv:sBottomDividerLineMarginLeft="10dp"
           stv:sBottomDividerLineMarginRight="10dp"

           />
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/et_SelectBank1"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           stv:sLeftTextSize="@dimen/information_textSize"
           stv:sLeftTextString="所属银行"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sLeftTextColor="@color/select_text_color"
           stv:sRightTextSize="@dimen/information_textSize"
           stv:sBottomDividerLineMarginLeft="10dp"
           stv:sBottomDividerLineMarginRight="10dp"
           stv:sRightTextString="自动填写"

           />
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/et_ValidityTime1"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           stv:sLeftTextSize="@dimen/information_textSize"
           stv:sLeftTextString="有效期"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sLeftTextColor="@color/select_text_color"
           stv:sRightTextSize="@dimen/information_textSize"
           stv:sBottomDividerLineMarginLeft="10dp"
           stv:sBottomDividerLineMarginRight="10dp"

           />


       <TextView
           android:layout_marginTop="@dimen/_10dp"
           android:gravity="center_vertical"
           android:paddingLeft="@dimen/_10dp"
           android:layout_width="match_parent"
           android:textStyle="bold"
           android:background="@color/white"
           android:layout_height="50dp"
           android:textSize="17sp"
           android:textColor="@color/select_text_color"
           android:text="信用卡信息"/>
       <cn.com.stableloan.view.supertextview.SuperTextView
           android:id="@+id/is_credit"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           stv:sLeftTextSize="@dimen/information_textSize"
           stv:sLeftTextString="拥有信用卡"
           stv:sRightIconRes="@mipmap/ic_arrow"
           stv:sRightTextColor="@color/text_setting"
           stv:sLeftTextColor="@color/select_text_color"
           stv:sRightTextSize="@dimen/information_textSize"
           stv:sBottomDividerLineMarginLeft="10dp"
           stv:sBottomDividerLineMarginRight="10dp"
           stv:sRightTextString="没有"
           />
       <LinearLayout
           android:id="@+id/layout_credit"
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:visibility="gone"
           android:layout_height="wrap_content">
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/et_BankCard2"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               stv:sLeftTextSize="@dimen/information_textSize"
               stv:sLeftTextString="信用卡卡号"
               stv:sRightIconRes="@mipmap/ic_arrow"
               stv:sRightTextColor="@color/text_setting"
               stv:sLeftTextColor="@color/select_text_color"
               stv:sRightTextSize="@dimen/information_textSize"
               stv:sBottomDividerLineMarginLeft="10dp"
               stv:sBottomDividerLineMarginRight="10dp"
               />
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/et_BankPersonName2"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               stv:sLeftTextSize="@dimen/information_textSize"
               stv:sLeftTextString="持卡人姓名"
               stv:sMaxEms="13"

               stv:sRightIconRes="@mipmap/ic_arrow"
               stv:sRightTextColor="@color/text_setting"
               stv:sLeftTextColor="@color/select_text_color"
               stv:sRightTextSize="@dimen/information_textSize"
               stv:sBottomDividerLineMarginLeft="10dp"
               stv:sBottomDividerLineMarginRight="10dp"

               />
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/et_BankPhone2"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               stv:sLeftTextSize="@dimen/information_textSize"
               stv:sLeftTextString="银行绑定手机号"
               stv:sRightIconRes="@mipmap/ic_arrow"
               stv:sRightTextColor="@color/text_setting"
               stv:sLeftTextColor="@color/select_text_color"
               stv:sRightTextSize="@dimen/information_textSize"
               stv:sBottomDividerLineMarginLeft="10dp"
               stv:sBottomDividerLineMarginRight="10dp"

               />
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/et_SelectBank2"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               stv:sLeftTextSize="@dimen/information_textSize"
               stv:sLeftTextString="所属银行"
               stv:sRightIconRes="@mipmap/ic_arrow"
               stv:sRightTextColor="@color/text_setting"
               stv:sLeftTextColor="@color/select_text_color"
               stv:sRightTextSize="@dimen/information_textSize"
               stv:sBottomDividerLineMarginLeft="10dp"
               stv:sBottomDividerLineMarginRight="10dp"
               stv:sRightTextString="自动填写"

               />
           <cn.com.stableloan.view.supertextview.SuperTextView
               android:id="@+id/et_ValidityTime2"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               stv:sLeftTextSize="@dimen/information_textSize"
               stv:sLeftTextString="有效期"
               stv:sRightIconRes="@mipmap/ic_arrow"
               stv:sRightTextColor="@color/text_setting"
               stv:sLeftTextColor="@color/select_text_color"
               stv:sRightTextSize="@dimen/information_textSize"
               stv:sBottomDividerLineMarginLeft="10dp"
               stv:sBottomDividerLineMarginRight="10dp"

               />
       </LinearLayout>
       <cn.com.stableloan.view.RoundButton
           android:id="@+id/save"
           android:layout_marginBottom="50dp"
           android:layout_marginTop="40dp"
           android:layout_gravity="center"
           android:layout_width="180dp"
           android:layout_height="40dp"
           android:text="保 存"
           app:btnCornerRadius="5dp"
           app:btnPressedRatio="0.9"
           app:btnSolidColor="@color/colorPrimary"
           android:gravity="center"
           android:textSize="18sp"
           android:textColor="@color/white"
           />
   </LinearLayout>
</ScrollView>
