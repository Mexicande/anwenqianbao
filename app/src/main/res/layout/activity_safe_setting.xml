<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_white"
    tools:context="cn.com.stableloan.ui.activity.SafeSettingActivity">
    <include layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp">
        <LinearLayout
            android:layout_marginRight="130dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_centerVertical="true"
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息解锁方式:"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginRight="@dimen/_10dp"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_toRightOf="@id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFBF28"
                android:textSize="15sp"
                android:text="手机解锁"/>
        </LinearLayout>
        <cn.com.stableloan.view.BetterSpinner
            android:id="@+id/et_way"
            android:layout_width="120dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize"
            android:paddingLeft="5dp"
            android:layout_alignParentRight="true"
            android:textColor="#FFBF28"
            android:layout_height="match_parent"
            android:background="@color/white"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp">
        <LinearLayout
            android:background="@color/white"
            android:layout_marginRight="130dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_centerVertical="true"
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="材料托管时间:"
                android:textSize="15sp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_toRightOf="@id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFBF28"
                android:textSize="15sp"
                android:text="6个月"/>
        </LinearLayout>
        <cn.com.stableloan.view.BetterSpinner
            android:id="@+id/et_times"
            android:layout_width="120dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize"

            android:paddingLeft="5dp"
            android:layout_alignParentRight="true"
            android:textColor="#FFBF28"
            android:layout_height="match_parent"
            android:background="@color/white"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp">
        <TextView
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_centerVertical="true"
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期至:"
            android:textSize="15sp"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_toRightOf="@id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFBF28"
            android:textSize="15sp"
            android:text="2017-06-29"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="17sp"
            android:layout_marginLeft="@dimen/_20dp"
            android:textColor="@color/red_btn_bg_color"/>
        <TextView
            android:textSize="17sp"
            android:layout_toRightOf="@id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/storage1"
            android:textColor="@color/text_setting"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text1"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="@dimen/_20dp"
            android:textColor="@color/red_btn_bg_color"/>
        <TextView
            android:textSize="17sp"
            android:layout_toRightOf="@id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/storage2"
            android:textColor="@color/text_setting"/>
    </RelativeLayout>

</LinearLayout>
