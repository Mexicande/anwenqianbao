<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/invite_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_invite_bg"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"

            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:src="@drawable/iv_invite_cash"/>
        <TextView
            android:layout_alignLeft="@id/iv_invite_bg"
            android:layout_marginTop="10dp"
            android:background="@mipmap/invite_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀友填资料"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_alignLeft="@id/iv_invite_bg"
            android:layout_below="@id/iv_invite_bg"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="14sp"
            android:textColor="@color/text_setting"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="文案文案文案"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_integar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_integar_bg"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:src="@drawable/iv_get_invite"/>
       <TextView
           android:layout_alignLeft="@id/iv_integar_bg"
           android:layout_width="wrap_content"
           android:text="积分兑换现金"
           android:textColor="@color/white"
           android:gravity="center"
           android:textSize="12sp"
           android:layout_height="wrap_content"
           android:background="@mipmap/integar_cash"/>
        <TextView
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_alignLeft="@id/iv_integar_bg"
            android:layout_below="@id/iv_integar_bg"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="14sp"
            android:textColor="@color/text_setting"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/safe_text3"/>
    </RelativeLayout>
</LinearLayout>