<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="cn.com.stableloan.ui.activity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_goback"/>
        </RelativeLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="70dp"
            android:elevation="2dp"
            android:layout_height="70dp"
            android:src="@mipmap/iv_logo"/>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/login_magicindicator"
            android:layout_marginRight="@dimen/_50dp"
            android:layout_marginLeft="@dimen/_50dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal" />
<View
    android:layout_width="match_parent"
    android:background="@color/line_color"
    android:layout_height="@dimen/_1dp"/>
        <FrameLayout
            android:id="@+id/fragment"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp">
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gay"
        android:text="贷款，投资你的明天"/>
</RelativeLayout>
