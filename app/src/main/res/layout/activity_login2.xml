<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="cn.com.stableloan.ui.activity.Login2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_marginTop="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageButton
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_goback"/>
        </RelativeLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/view_logo"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="90dp"
            android:elevation="2dp"
            android:layout_height="90dp"
            android:src="@mipmap/logo"/>
        <cn.com.stableloan.utils.SwitchMultiButton
            android:id="@+id/switchmultibutton"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/view_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/switch_button_bacground"
            android:layout_width="match_parent"

            android:layout_height="30dp"
            app:strokeRadius="7dp"
            app:selectedTab="0"
            app:strokeWidthSwitch="0dp"
            app:selectedColor="#6392c6"
            app:textSize="16sp"/>

      <!--  <include layout="@layout/login_password"
            />
        <include layout="@layout/login_code"
            android:visibility="gone"/>
        <include layout="@layout/login_message"
            android:visibility="gone"
            />-->
        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp">

        </FrameLayout>

    </LinearLayout>
    <TextView
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gay"
        android:text="消费金融行业先驱者"/>
</RelativeLayout>
