    <View
        android:layout_marginTop="3dp"
        android:id="@+id/view"
        android:background="@color/white"
        android:layout_below="@id/flow"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:layout_below="@id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_limt"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:textColor="#f9fefa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="额度范围(元)"/>
            <TextView
                android:id="@+id/min_max"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:layout_below="@id/tv_limt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f9fefa"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_rate"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:textColor="#f9fefa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参考月利息"/>
            <TextView
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:id="@+id/min_algorithm"
                android:layout_below="@id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f9fefa"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/layout4"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_time"
                android:textSize="15sp"
                android:textColor="#f9fefa"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最快放款时间"/>
            <TextView
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:id="@+id/average_time"
                android:layout_below="@id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f9fefa"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>

