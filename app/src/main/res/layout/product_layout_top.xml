<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
>
    <data>
        <variable
            name="product"
            type="cn.com.stableloan.model.Product_DescBean"/>
    </data>
    <RelativeLayout
        android:background="@drawable/desc_top"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/product_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/logo"/>
        <TextView
            android:id="@+id/tv_pname"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/product_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{product.product.pname}"
            />
        <TextView
            android:id="@+id/product_introduction"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="@{product.product.product_introduction}"
            android:layout_alignLeft="@id/tv_pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pname"/>
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout3"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:layout_below="@id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_limt"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:textColor="#f9fefa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="额度范围"/>
            <TextView
                android:id="@+id/min_max"
                android:textSize="18sp"
                android:layout_marginTop="7dp"
                android:layout_below="@id/tv_limt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f9fefa"
                android:text="100-50万"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/layout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_rate"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:textColor="#f9fefa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参考月利息"/>
            <TextView
                android:textSize="18sp"
                android:layout_marginTop="7dp"
                android:id="@+id/min_algorithm"
                android:layout_below="@id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f9fefa"
                android:text="@{product.product.min_algorithm}"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/layout4"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_time"
                android:textSize="17sp"
                android:textColor="#f9fefa"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最快放款时间"/>
            <TextView
                android:textSize="18sp"
                android:layout_marginTop="7dp"
                android:id="@+id/average_time"
                android:layout_below="@id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f9fefa"
                android:text="@{product.product.average_time}"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>

</layout>