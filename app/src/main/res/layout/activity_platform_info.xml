<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_white"
    tools:context="cn.com.stableloan.ui.activity.PlatformInfoActivity">
    <include layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:id="@+id/layout3"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/product_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/logo"/>
        <RelativeLayout
            android:id="@+id/layout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/product_logo"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_pname"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2345贷款王-信和浙大"
                />
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/product_introduction"
                android:textSize="13sp"
                android:text="成立时间 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pname"/>
            <TextView
                android:id="@+id/online_time"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textSize="13sp"
                android:layout_toRightOf="@id/product_introduction"
                android:layout_below="@id/tv_pname"
                android:text="2017-5-19"
                />
            <TextView
                android:id="@+id/amount"
                android:layout_marginTop="3dp"
                android:layout_below="@id/product_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="月均方款量 :"/>
            <TextView
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_introduction"
                android:layout_toRightOf="@id/amount"
                android:text="120000"
                />
        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_marginTop="20dp"
            android:layout_below="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/base_white"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:text="平台介绍"
            android:textSize="20sp"
            android:layout_below="@id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</LinearLayout>
