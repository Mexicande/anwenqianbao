<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/base_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/desc_toolbar_layout"/>
    <LinearLayout
        android:id="@+id/linla"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/layoutgo"
        android:background="@color/base_white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include layout="@layout/product_layout_top"
                    />
                <include layout="@layout/product_desc_jiekuanxijie"
                    />
                <include layout="@layout/product_desc_condition"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/layoutgo"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/ic_strategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/select_text_color"
            android:text="攻略"
            />
        <Button
            android:id="@+id/apply"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/white"
            android:text="立即申请"
            />
    </LinearLayout>
</RelativeLayout>