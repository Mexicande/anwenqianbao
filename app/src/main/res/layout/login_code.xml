<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/view_code"
    android:layout_marginTop="@dimen/_30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已发送验证码短信到"
        android:textColor="@color/gay"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/gay"
        android:text="+86 135 5290 3139"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        >
        <cn.com.stableloan.utils.editext.PowerfulEditText
            android:id="@+id/et_code"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:maxLength="4"
            android:paddingRight="15dp"
            android:background="@drawable/login_editext_bacground"
            android:inputType="number"
            android:paddingLeft="@dimen/_10dp"
            android:textSize="@dimen/_16sp"
            android:textColorHint="@color/gay"
            android:theme="@style/MyEditText"
            android:textCursorDrawable="@null"
            app:funcType="canClear"
            />
        <Button
            android:id="@+id/bt_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="发送验证码"
            android:textColor="@color/gay"
            android:background="@drawable/login_editext_bacground"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/change_phone"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gay"
        android:textSize="@dimen/_14sp"
        android:text="更换手机号"/>

    <cn.com.stableloan.view.RoundButton
        android:id="@+id/bt_message_login"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="递交"
        android:textStyle="bold"
        app:btnCornerRadius="10dp"
        app:btnPressedRatio="0.9"
        app:btnSolidColor="@color/login_button"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        />
</LinearLayout>