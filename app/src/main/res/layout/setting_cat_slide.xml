<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_safe_setting_activty"
    >
    <RelativeLayout
        android:id="@+id/cat_SlideImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/cat_ViewImage"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/slide_title"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="查询个人材料"
                android:textColor="@color/blacktext"
                android:textSize="18sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="#EEEEEE"
                />
            <RadioGroup
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/RB_NO"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="  无验证    "
                    android:button="@null"
                    android:drawableLeft="@drawable/circular_check_bg"
                    android:textSize="17sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="#EEEEEE"
                    />
                <RadioButton
                    android:id="@+id/RB_PW"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text=" 密码验证  "
                    android:button="@null"
                    android:drawableLeft="@drawable/circular_check_bg"
                    android:textSize="17sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="#EEEEEE"
                    />
                <RadioButton
                    android:id="@+id/RB_GE"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text=" 手势验证  "
                    android:button="@null"
                    android:drawableLeft="@drawable/circular_check_bg"
                    android:textSize="17sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="#EEEEEE"
                    />
                <RadioButton
                    android:visibility="gone"
                    android:id="@+id/RB_Finder"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text=" 指纹验证  "
                    android:button="@null"
                    android:drawableLeft="@drawable/circular_check_bg"
                    android:textSize="17sp"
                    />
            </RadioGroup>


        </LinearLayout>
        <View
            android:id="@+id/image_Visiable"
            android:layout_above="@id/cat_ViewImage"
            android:background="#50000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </View>
    </RelativeLayout>
</RelativeLayout>