<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:id="@+id/tv_titleName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:textSize="17sp"
            android:textColor="@color/select_text_color"
            android:text=" 申请条件/所需材料"
            android:textStyle="bold"
            android:drawableLeft="@drawable/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/platform_desc"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:background="@drawable/cat_platform"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="查看平台详情"
            />
        <TextView
            android:layout_below="@id/tv_titleName"
            android:layout_marginTop="10dp"
            android:id="@+id/product_details"
            android:layout_marginLeft="@dimen/desc_left"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/product_desc"
            android:lineSpacingExtra="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />
</RelativeLayout>