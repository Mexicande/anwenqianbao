<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white"
    android:orientation="vertical"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    tools:context="cn.com.stableloan.ui.activity.CareerChoiceActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@drawable/text_color"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/perfect_title"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信 用 卡:"/>
        <cn.com.stableloan.view.flowlayout_tag.TagFlowLayout
            android:id="@+id/id_flowlayout"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            zhy:max_select="1"
            app:gravity="left"
            android:layout_height="wrap_content">
        </cn.com.stableloan.view.flowlayout_tag.TagFlowLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCheck"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:theme="@style/CheckTheme"
            android:text="@string/insurance"
            android:textColor="@color/text_setting"
            android:textStyle="bold"
            android:textSize="13sp"
            />
        <!-- <TextView
             android:textStyle="bold"
             android:textSize="13sp"
             android:textColor="@color/colorPrimary"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/insurance"/>-->
    </LinearLayout>

    <cn.com.stableloan.view.supertextview.SuperButton
        android:id="@+id/bt_login"
        android:layout_below="@id/layoutCheck"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:enabled="false"
        android:text="去借款"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:sCornersRadius="5dp"
        app:sSelectorDisableColor="@color/Normal_Button"
        app:sSelectorNormalColor="@color/colorPrimary"
        app:sSelectorPressedColor="@color/normalcolorPrimary"
        app:sUseSelector="true" />
</LinearLayout>
