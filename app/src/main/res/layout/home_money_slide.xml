<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"
    tools:showIn="@layout/fragment_home"
   >
    <RelativeLayout
        android:id="@+id/slide_Safe_Time"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/view_time"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_OneWeek"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="500元"
                android:textColor="@color/blacktext"
                android:textSize="@dimen/_16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="#EEEEEE"
                />
            <TextView
                android:id="@+id/tv_OneMonth"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="1000元"
                android:textColor="@color/blacktext"
                android:textSize="@dimen/_16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="#EEEEEE"
                />
            <TextView
                android:id="@+id/tv_ThreeMonth"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/blacktext"

                android:text="2000元"
                android:textSize="@dimen/_16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="#EEEEEE"
                />
            <TextView
                android:id="@+id/tv_SixMonth"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/blacktext"

                android:text="5000元"
                android:textSize="@dimen/_16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="#EEEEEE"
                />
            <TextView
                android:id="@+id/tv_forever"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="8000元"
                android:textColor="@color/blacktext"
                android:textSize="@dimen/_16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10dp"
                android:background="#EEEEEE"
                />
            <TextView
                android:id="@+id/bt_cancel"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blacktext"
                android:gravity="center_horizontal"
                android:text="取消"
                android:textSize="@dimen/_16sp"/>
        </LinearLayout>
        <View
            android:id="@+id/time_Visiable"
            android:layout_above="@id/view_time"
            android:background="#50000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </View>
    </RelativeLayout>
</RelativeLayout>