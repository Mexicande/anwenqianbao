<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/seckill_item_one"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginLeft="@dimen/_10dp"
    android:layout_marginRight="@dimen/_10dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardUseCompatPadding="true">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="80dp">
           <ImageView
               android:layout_marginLeft="@dimen/_10dp"
               android:id="@+id/product_logo"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_centerVertical="true"
               />
               <RelativeLayout
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@id/product_logo"
                   android:layout_marginLeft="@dimen/_10dp"
                   android:layout_width="match_parent"
                   android:layout_height="45dp">
                       <TextView
                           android:id="@+id/pname"
                           android:textSize="15sp"
                           android:textColor="@color/select_text_color"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="111"/>
                       <TextView
                           android:id="@+id/amount"
                           android:layout_alignParentBottom="true"
                           android:textSize="13sp"
                           android:textColor="@color/text_setting"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="11"/>
                       <TextView
                           android:id="@+id/activity_desc"
                           android:layout_marginLeft="100dp"
                           android:layout_alignParentBottom="true"
                           android:layout_centerVertical="true"
                           android:textColor="@color/text_setting"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="11"/>
               </RelativeLayout>
           <TextView
               android:id="@+id/tv_free"
               android:layout_marginRight="@dimen/_40dp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:textSize="15sp"
               android:textColor="@color/select_text_color"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="免息"/>
           <ImageView
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/_10dp"
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/iv_black_arrow_right"/>
           <View
               android:layout_marginRight="@dimen/_20dp"
               android:layout_toLeftOf="@id/tv_free"
               android:layout_width="1dp"
               android:layout_centerVertical="true"
               android:background="#F4F4F4"
               android:layout_height="match_parent"/>
       </RelativeLayout>

</android.support.v7.widget.CardView>
