<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardElevation="0.5dp"
    card_view:cardCornerRadius="0.1dp"
    card_view:cardUseCompatPadding="true"
    android:background="#f9f9f9"
    android:foreground="?android:attr/selectableItemBackground"
    >
       <RelativeLayout
           android:layout_marginBottom="@dimen/_10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
               <TextView
                   android:layout_marginTop="@dimen/_10dp"
                   android:id="@+id/project_name"
                   android:layout_marginRight="@dimen/_10dp"
                   android:layout_marginLeft="@dimen/_10dp"
                   android:textStyle="bold"
                   android:textSize="17sp"
                   android:textColor="@color/select_text_color"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="低息贷-还信用卡"/>
               <ImageView
                   android:layout_marginRight="@dimen/_10dp"
                   android:layout_marginLeft="@dimen/_10dp"
                   android:layout_marginTop="10dp"
                   android:scaleType="centerCrop"
                   android:adjustViewBounds="true"
                   android:src="@drawable/iv_special_bg"
                   android:layout_below="@id/project_name"
                   android:id="@+id/project_logo"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   />
               <TextView
                   android:id="@+id/title"
                   android:textSize="15sp"
                   android:textStyle="bold"
                   android:textColor="@color/select_text_color"
                   android:layout_marginRight="@dimen/_10dp"
                   android:layout_marginLeft="@dimen/_10dp"
                   android:layout_marginTop="@dimen/_10dp"
                   android:layout_below="@id/project_logo"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="超低息信用卡还贷，省钱持家小能手"/>
               <TextView
                   android:id="@+id/preface"
                   android:textSize="13sp"
                   android:textColor="@color/gay"
                   android:layout_marginRight="@dimen/_10dp"
                   android:layout_marginLeft="@dimen/_10dp"
                   android:layout_marginTop="@dimen/_2dp"
                   android:layout_below="@id/title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="超低息信用卡还贷，省钱持家小能手"/>

               <TextView
                   android:textStyle="bold"
                   android:id="@+id/total_amount"
                   android:layout_alignParentRight="true"
                   android:textSize="12sp"
                   android:textColor="@color/select_text_color"
                   android:layout_marginTop="@dimen/_10dp"
                   android:layout_marginRight="@dimen/_10dp"
                   android:layout_marginLeft="@dimen/_10dp"
                   android:layout_below="@id/project_logo"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="共5款产品"/>
            <!--   <TextView
                   android:id="@+id/total_amount"
                   android:layout_alignParentRight="true"
                   android:textSize="13sp"
                   android:textColor="@color/gay"
                   android:layout_marginTop="@dimen/_2dp"
                   android:layout_marginRight="@dimen/_20dp"
                   android:layout_marginLeft="@dimen/_20dp"
                   android:layout_below="@id/product_amount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="总额度1234567元"/>-->

       </RelativeLayout>
</android.support.v7.widget.CardView>
