<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f2f3f5"
    tools:context="cn.com.stableloan.ui.fragment.UserFragment">
    <RelativeLayout
        android:background="@drawable/user_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/User_logo"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/logo"/>
        <TextView
            android:id="@+id/tv_nick"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/User_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_UserPhone"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_nick"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <View
            android:id="@+id/view"
            android:background="#f2f3f5"
            android:layout_width="@dimen/_1dp"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/layout_Integral"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_toLeftOf="@id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="38dp"
                    android:src="@mipmap/integral"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#4D4D4D"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的积分:"
                    />
                <TextView
                    android:id="@+id/tv_Integral"
                    android:textSize="15sp"
                    android:textColor="#4D4D4D"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"/>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/laout_Money"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_toRightOf="@id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/money"/>
                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的现金:"
                    android:textColor="#4D4D4D"
                    />
                <TextView
                    android:id="@+id/bt_Money"
                    android:textSize="15sp"
                    android:textColor="#4D4D4D"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20元"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


    <com.allen.library.SuperTextView
        android:id="@+id/layout_my"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftIconRes="@mipmap/ic_my"
        stv:sBottomLineMargin="0dp"
        android:textSize="16sp"
        stv:sLeftIconHeight="25dp"
        stv:sLeftTextColor="@color/gay"
        stv:sLeftIconWidth="25dp"
        stv:sRightIconRes="@mipmap/iv_left"
        stv:sRightIconHeight="17dp"
        stv:sRightIconWidth="17dp"
        stv:sLeftTextSize="16dp"
        stv:sLeftTextString="我的资料" />
    <com.allen.library.SuperTextView
        android:id="@+id/layout_collection"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftIconRes="@mipmap/ic_collection"
        stv:sBottomLineMargin="0dp"
        android:textSize="16sp"
        stv:sLeftIconHeight="25dp"
        stv:sLeftTextColor="@color/gay"
        stv:sLeftIconWidth="25dp"
        stv:sRightIconRes="@mipmap/iv_left"
        stv:sRightIconHeight="17dp"
        stv:sRightIconWidth="17dp"
        stv:sLeftTextSize="16dp"
        stv:sLeftTextString="我的收藏" />
    <com.allen.library.SuperTextView
        android:id="@+id/feedback"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftIconRes="@mipmap/feedback"
        stv:sBottomLineMargin="0dp"
        android:textSize="16sp"
        stv:sLeftIconHeight="25dp"
        stv:sLeftTextColor="@color/gay"
        stv:sLeftIconWidth="25dp"
        stv:sRightIconRes="@mipmap/iv_left"
        stv:sRightIconHeight="17dp"
        stv:sRightIconWidth="17dp"
        stv:sLeftTextSize="16dp"
        stv:sLeftTextString="意见反馈" />
    <com.allen.library.SuperTextView
        android:id="@+id/layout_setting"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftIconRes="@mipmap/ic_setting"
        stv:sBottomLineMargin="0dp"
        android:textSize="16sp"
        stv:sLeftIconHeight="25dp"
        stv:sLeftTextColor="@color/gay"
        stv:sLeftIconWidth="25dp"
        stv:sRightIconRes="@mipmap/iv_left"
        stv:sRightIconHeight="17dp"
        stv:sRightIconWidth="17dp"
        stv:sLeftTextSize="16dp"
        stv:sLeftTextString="设置" />

</LinearLayout>
